    // Function to generate HTML for a single post
    function generatePostHTML(post) {
      return `
            <div class="post-widget">
                <div class="post-header">
                    <img class="user-image" src="${post.userImage}" alt="User Image">
                    <div class="user-info">
                        <h4 class="username">${post.username}</h4>
                        <p class="time">${post.time}</p>
                    </div>
                </div>
                <p class="post-text">${post.text}</p>
                <div class="post-media">
                    <img src="${post.contentImage}" alt="Content Image">
                </div>
                <div class="post-actions">
                    <button><i class="far fa-comment"></i> Comment</button>
                    <button><i class="fas fa-retweet"></i> Retweet</button>
                    <button><i class="far fa-heart"></i> Like</button>
                    <button><i class="fas fa-share"></i> Share</button>
                </div>
            </div>
            `;
    }

    // Function to insert posts into the post container
    function renderPosts(posts) {
      const postContainer = document.getElementById('postContainerBox');
      console.log(posts);
      posts.forEach(post => {
        const postElement = document.createElement('div');
        postElement.innerHTML = generatePostHTML(post);
        postContainer.appendChild(postElement);
      });
    }
    renderPosts(postData);

