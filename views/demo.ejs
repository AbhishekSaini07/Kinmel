      margin-bottom: 10px;
      /* Add spacing between input fields */
      padding: 10px;
      /* Increase padding for better input field visibility */
      border: 1px solid #ced4da;
      /* Use a lighter border color */
      border-radius: 10px;
      /* Adjust border radius */
    }

    .postWidget form textarea {
      resize: vertical;
      /* Allow vertical resizing of textarea */
    }

    .postWidget form .buttonContainer {
      display: flex;
      align-items: center;
      position: absolute;
      bottom: 20px;
    }

    .postWidget form .buttonContainer button {
      padding: 10px 80px;
      /* Increase padding for button */
