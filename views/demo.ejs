    }

    .postWidget form .buttonContainer button:hover {
      background-color: #007bff9c;
      /* Darker shade on hover */
    }

    .postWidget form #uploadIcon {
      margin-bottom: 10px;
      cursor: pointer;
      color: #007bff85;
      /* Use primary color for the upload icon */
    }

    .postWidget form #uploadIcon:hover {
      color: #0056b3;
      /* Darker shade on hover */
    }




    .contactWidget {
