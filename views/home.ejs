// Function to generate HTML for a single product
function generateProductHTML(product) {
    return `
        <div class="card">
            <img src="/images/km2.png" class="card-img-top" alt="Product Image">
            <div class="card-body">
                <h5 class="card-title">${product.name}</h5>
                <p class="card-text">${product.description}</p>
                <p class="card-text">Price: ${product.price}</p>
                <p class="card-text">Quantity: ${product.quantity}</p>
                <p class="card-text">Category: ${product.category}</p>
            </div>
        </div>
    `;
}

// Function to render products in the product container
function renderProducts(products, orientation) {
    const productContainer = document.getElementById(`${orientation}`);
    productContainer.innerHTML = ''; // Clear existing content
    products.forEach(product => {
        const productElement = document.createElement('div');
        productElement.classList.add('product');
        productElement.innerHTML = generateProductHTML(product);
        productContainer.appendChild(productElement);
    });
}

